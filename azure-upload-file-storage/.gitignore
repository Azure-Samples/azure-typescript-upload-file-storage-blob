# Root .gitignore for npm workspace monorepo

# Dependencies
node_modules/

# Environment files
.env
.env.*
.env.local
.env.development
.env.test
.env.production
!.env.sample

# Logs
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
lerna-debug.log*

# Build outputs (each workspace handles its own)
dist/
build/
out/
*.tsbuildinfo

# Coverage
coverage/
.nyc_output/

# IDE and Editor
.vscode/*
!.vscode/extensions.json
!.vscode/settings.json
.idea/
*.swp
*.swo
*~
*.sublime-workspace
*.sublime-project

# OS files
.DS_Store
Thumbs.db
desktop.ini

# Azure
.azure/

# Docker
docker-compose.override.yml

# Temporary files
*.tmp
*.temp
.cache/

# Optional npm cache
.npm

# Backup files
*.bak
*.backup
